<div class="container mt-4">
  <h2>Gestión de Usuarios</h2>
  <a href="/dashboard/users/new" class="btn btn-success mb-3">Nuevo Usuario</a>

  <!-- Búsqueda -->
  <form method="GET" action="/dashboard/users">
    <input type="text" name="search" placeholder="Buscar usuario..." value="<%= search %>">
    <button type="submit" class="btn-sm btn-success mt-2"><i class="fas fa-search"></i> Buscar</button>
  </form>

  <!-- Tabla de contenido a mostrar -->
  <% if (users.length> 0) { %>
    <table class="table table-bordered table-striped text-center mt-4">
      <thead>
        <tr>
          <th>Avatar</th>
          <th>Username</th>
          <th>Nombre</th>
          <th>Apellidos</th>
          <th>Email</th>
          <th>Roles</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user=> { %>
          <tr>
            <td>
              <div class="user-icon">
                <img class="user-icon"
                  src="<%= user.profile_image ? '/uploads/' +user.profile_image : '/images/user-icon.png' %>"
                  alt="Usuario" />
              </div>
            </td>
            <td>
              <%= user.username %>
            </td>
            <td>
              <%= user.nombre %>
            </td>
            <td>
              <%= user.apellido %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.roles %>
            </td>
            <td>
              <a href="/dashboard/users/<%= user.id %>/edit" class="btn btn-sm btn-primary">Editar</a>
              <form action="/dashboard/users/<%= user.id %>/delete" method="POST" class="d-inline">
                <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
              </form>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
    <% } else { %>
      </br>
      <div class="alert alert-warning">No existen datos para mostrar</div>
      <% } %>

        <!-- Paginado -->
        <nav aria-label="Page navigation">
          <ul class="pagination">
            <% for (let i=1; i <=Math.ceil(count / limit); i++) { %>
              <li class="page-item <%= i == page ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>&search=<%= search %>">
                  <%= i %>
                </a>
              </li>
              <% } %>
          </ul>
        </nav>

</div>