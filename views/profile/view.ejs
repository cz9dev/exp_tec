<div class="container mt-4">
  <div class="row">
    <div class="col-md-4">
      <!-- Tarjeta del perfil -->
      <div class="card profile-card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Perfil de <%= user.nombre %>
              <%= user.apellido %>
          </h2>

          <!-- Imagen de perfil -->
          <div class="text-center mb-4">
            <div class="profile-image">
              <img src="<%= user.profile_image ? '/uploads/'+user.profile_image : '/images/user-icon.png' %>"
                alt="Imagen de perfil" class="img-fluid rounded-circle">
            </div>
            <label for="profile_image" class="btn btn-outline-secondary btn-sm mt-2">Cambiar foto</label>
          </div>

          <!-- Información del perfil -->
          <div class="profile-info">
            <div class="info-item">
              <span class="info-label">Username:</span>
              <span class="info-value">
                <%= user.username %>
              </span>
            </div>
            <div class="info-item">
              <span class="info-label">Email:</span>
              <span class="info-value">
                <%= user.email %>
              </span>
            </div>
            <div class="info-item">
              <span class="info-label">Nombre:</span>
              <span class="info-value">
                <%= user.nombre %>
              </span>
            </div>
            <div class="info-item">
              <span class="info-label">Apellido:</span>
              <span class="info-value">
                <%= user.apellido %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <!-- Tarjeta de edición del perfil -->
      <div class="card edit-card">
        <div class="card-body">
          <h2 class="card-title mb-4">Editar Perfil</h2>

          <form action="/dashboard/profile/update" method="POST" enctype="multipart/form-data">
            <div class="form-group mb-3">
              <label class="form-label">Username</label>
              <input type="text" class="form-control" name="=username" value="<%= user.username %>" readonly>
            </div>

            <div class="form-group mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
            </div>

            <div class="form-group mb-3">
              <label for="nombre" class="form-label">Nombre</label>
              <input type="text" class="form-control" id="nombre" name="nombre" value="<%= user.nombre %>" required>
            </div>

            <div class="form-group mb-3">
              <label for="apellido" class="form-label">Apellido</label>
              <input type="text" class="form-control" id="apellido" name="apellido" value="<%= user.apellido %>"
                required>
            </div>

            <div class="form-group mb-3">
              <label for="profile_image" class="form-label">Imagen de perfil</label>
              <input type="file" class="form-control" id="profile_image" name="profile_image">
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <button type="submit" class="btn btn-primary">Actualizar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>