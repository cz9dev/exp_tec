<div class="container mt-4">
  <h2>Gesti√≥n de Usuarios</h2>
  
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Roles</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.roles %></td>
          <td>
            <a href="/dashboard/users/<%= user.id %>/edit" class="btn btn-sm btn-primary">Editar</a>
            <form action="/dashboard/users/<%= user.id %>/delete" method="POST" class="d-inline">
              <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  
  <a href="/dashboard/users/new" class="btn btn-success">Nuevo Usuario</a>
</div>