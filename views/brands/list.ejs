<div class="container mt-4">
    <h2>Listado de Marcas</h2>
    <a href="/dashboard/brands/new" class="btn btn-success mb-3">Nuevo</a>

    <!-- BÃºsqueda -->
    <form method="GET" action="/dashboard/brands">
        <input type="text" name="search" placeholder="Buscar dispositivo..." value="<%= search %>">
        <button type="submit" class="btn-sm btn-success mt-2"><i class="fas fa-search"></i> Buscar</button>
    </form>

    <!-- Tabla de contenido a mostrar -->
    <table class="table table-bordered table-striped text-center mt-4">
        <thead>
            <tr>                
                <th>Marca</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% brands.forEach(brand=> { %>
                <tr>                    
                    <td>
                        <%= brand.marca %>
                    </td>
                    <td>
                        <a href="/dashboard/brands/<%= brand.id %>/edit" class="btn btn-sm btn-primary">Editar</a>
                        <form action="/dashboard/brands/<%= brand.id %>/delete" method="POST" class="d-inline">                            
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>                        
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>

    <!-- Paginado -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <% for (let i=1; i <=Math.ceil(count / limit); i++) { %>
                <li class="page-item <%= i == page ? 'active' : '' %>">
                    <a class="page-link"
                        href="?page=<%= i %>&search=<%= search %>">
                        <%= i %>
                    </a>
                </li>
                <% } %>
        </ul>
    </nav>

</div>