<!-- views/roles/details.ejs -->

<div class="container mt-4">
  <h2>Permisos de <%= role.nombre %></h2>
  <a href="/dashboard/roles/<%= role.id %>/permisos/nuevo" class="btn btn-primary">Agregar Permiso</a>
  
  <div class="mb-4">
    <p><strong>Descripción:</strong> <%= role.descripcion %></p>
  </div>

  <table class="table table-bordered table-striped text-center">
    <thead>
      <tr>
        <th>Nombre del Permiso</th>
        <th>Descripción del Permiso</th>
        <th>Acción</th>
      </tr>
    </thead>
    <tbody>
      <% if (role.permissions && role.permissions.length > 0) { %>
        <% role.permissions.forEach(permission => { %>
          <tr>
            <td><%= permission.nombre %></td>
            <td><%= permission.descripcion %></td>
            <td>
              <form method="POST" action="/dashboard/roles/<%= role.id %>/permisos/<%= permission.id %>/eliminar">
                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="2" class="text-center">No hay permisos asignados</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <div class="mt-4">
    <a href="/dashboard/roles" class="btn btn-secondary">Volver a la lista de roles</a>
  </div>
</div>
