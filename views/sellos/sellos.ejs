<div class="container mt-4">
    <h1>Sellos</h1>

    <form id="search-form">
        <input type="text" name="search" id="search" placeholder="Buscar sello..." value="<%= search %>">
        <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-search"></i> Buscar</button>
    </form>

    <table class="table table-bordered table-striped text-center mt-4">
        <thead>
            <tr>
                <th>Sello</th>
                <th>Dispositivo</th>
                <th>Fecha</th>
                <th>Testigo</th>
                <th>Inform√°tico</th>                
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% sellos.forEach(sello=> { %>
                <tr>
                    <td>
                        <%= sello.sello %>
                    </td>
                    <td>
                        <%= sello.dispositivo_nombre %>
                    </td>
                    <td>
                        <%= sello.fecha_cambio %>
                    </td>
                    <td>
                        <%= sello.trabajador_nombre %>
                    </td>
                    <td>
                        <%= sello.usuario_nombre %>
                    </td>                    
                    <td>
                        <form action="/dashboard/sellos/<%= sello.id %>/delete" method="POST"
                            class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination">
            <% for (let i=1; i <=Math.ceil(count / limit); i++) { %>
                <li class="page-item <%= i == page ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&search=<%= search %>">
                        <%= i %>
                    </a>
                </li>
                <% } %>
        </ul>
    </nav>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $('#search-form').submit(function (event) {
        event.preventDefault();
        const search = $('#search').val();
        window.location.href = `?search=${search}`;
    });
</script>